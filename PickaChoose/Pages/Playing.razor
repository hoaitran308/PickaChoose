@page "/playing"
@using PickaChoose.Data

<h3>PickaChoose</h3>
<p>Time countdown: <span style="color: @(countdownTime < 60 ? "red" : "green")">@(TimeSpan.FromSeconds(@countdownTime).ToString(@"mm\:ss"))</span></p>

@for (int i = 1; i < MaxHeight - 1; i++)
{
    for (int j = 1; j < MaxWidth - 1; j++)
    {
        int x = i;
        int y = j;
        <img src="pokemon/@(pokemon[i, j]).png"
                class="@(IsThePokemonPicked(x, y) ? "pokemon picked" : "pokemon")"
                @onclick="() => PickThePokemon(x, y)" >
    }
    <br />
}


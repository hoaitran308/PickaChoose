@page "/playing"
@using PickaChoose.Data

<h3>PickaChoose</h3>
<p>Time countdown: <span style="color: @(countdownTime < 60 ? "red" : "green")">@(TimeSpan.FromSeconds(@countdownTime).ToString(@"mm\:ss"))</span></p>

@for (int i = 1; i < MaxHeight - 1; i++)
{
    for (int j = 1; j < MaxWidth - 1; j++)
    {
        int x = i;
        int y = j;
        if (IsInMap(x, y))
        {
            <img @onclick="() => PickThePokemon(x, y)" class="@(IsThePokemonPicked(x, y) ? "pokemon picked" : "pokemon")" src="pokemon/@(pokemon[i, j]).png">
        }
        else
        {
            <img src="pokemon/0.png">
        }
    }
    <br />
}

